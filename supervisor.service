[Unit]
Description=Supervisor - Service Manager
After=network.target

[Service]
Type=simple
User=sam
WorkingDirectory=/home/sam/Code/supervisor
ExecStart=/usr/bin/python3 /home/sam/Code/supervisor/run.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
